<div id="mini-cart" class="fixed top-0 right-0 z-40 h-screen p-4 overflow-y-auto transition-transform translate-x-full bg-white w-full max-w-md dark:bg-gray-800" tabindex="-1" aria-labelledby="mini-cart-label">
    <div class="flex items-center justify-between">
        <h5 id="mini-cart-label" class="inline-flex items-center mb-4 text-base font-semibold text-gray-500 dark:text-gray-400">
            {{ section.settings.title }}
        </h5>
        <button
            type="button"
            data-drawer-hide="mini-cart"
            aria-controls="mini-cart"
            class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 absolute top-2.5 right-2.5 inline-flex items-center justify-center dark:hover:bg-gray-600 dark:hover:text-white"
            aria-label="Close mini cart"
        >
            {% render 'icons', icon: 'close' %}
        </button>
    </div>
    <div class="flex gap-3 md:gap-4">
        Your cart is empty
    </div>
</div>

{% schema %}
{
  "name": "Mini cart",
  "tag": "section",
  "class": "mini-cart-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shopping Bag"
    }
  ]
}
{% endschema %}