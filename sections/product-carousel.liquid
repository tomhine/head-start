<div class="container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
        <div>
            {% if section.settings.title != blank %}
                <h2 class="text-2xl font-bold text-center">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.subtitle != blank %}
                <p class="text-center">{{ section.settings.subtitle }}</p>
            {% endif %}
        </div>
    {% endif %}

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 items-center justify-items-center gap-4 md:gap-6">
        {% for product in section.settings.products_collection.products %}
            {% render 'product-card', product: product %}
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Product carousel",
  "tag": "section",
  "class": "product-carousel-section",
  "settings": [
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Products"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "collection",
      "id": "products_collection",
      "label": "Products"
    }
  ],
  "presets": [
    {
      "name": "Products Carousel",
      "category": "custom"
    }
  ]
}
{% endschema %}